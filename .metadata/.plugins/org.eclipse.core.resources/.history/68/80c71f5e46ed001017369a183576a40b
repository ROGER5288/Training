package FlowControlStatement.LoopingStatement;

public class Program3 {
	public static void main(String[] args) {
		int num = 123;
		int sum = 0;
		int product = 1;
		while(num!=0) {
			sum = sum + num%10;
			product = product * (num%10);
			num/=10;
		}
		System.out.println(sum);
		System.out.println(product);
		if(sum==product) {
			System.out.println("The numbers is a SPY number");
		}else {
			System.out.println("The no is not a spy number");
		}
	}

}
