package FlowControlStatement.LoopingStatement;

public class Program7 {
	public static void main(String[]args) {
		int num = 28;
		int i = 1;
		int j = 0;
		do {
			if(num%i==0) {
				j+= i;
			}
			i++;
		}while(i<=num/2);
		if(j==num) {
			System.out.println("Perfect number");
		}else {
			System.out.println("Not an perfect number");
		}
	}
}
