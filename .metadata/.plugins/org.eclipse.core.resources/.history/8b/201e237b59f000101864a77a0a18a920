package Methods;

public class Program {
    public static void main(String[] args) {
        int n = 5;

        for (int row = 1; row <= n; row++) {
            for (int col = 1; col <= n; col++) {

                if (row == (n + 1) / 2 ||
                    col == row ||
                    col == n - row + 1) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }

            }
            System.out.println();
        }
    }
}





