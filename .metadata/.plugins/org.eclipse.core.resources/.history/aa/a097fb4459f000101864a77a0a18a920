package Methods;

public class Program12 {
	public static void main(String[] args) {
		int n = 3;
		for(int row=1;row<=2*n-1;row++) {
			for(int col=1;col<=2*n-1;col++) {
				if (row == (n + 1) / 2 ||
					    (row <= col && row + col <= n + 1) ||
					    (row >= col && row + col >= n + 1))
 {
					System.out.print("*");
				}else{
					System.out.print(" ");
				}
				
			}
			System.out.println();
		}
	}
}



