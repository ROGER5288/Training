package FlowControlStatement.LoopingStatement.Forloop;

public class Program8 {
	public static void main(String[] args) {
		int n=3;
		for(int row = 1; row<=n; row++) {
			for(int col = 1; col<=n- row +(2*row-1);col++) {
				if(col<=n-row ) {
					System.out.print(" ");
				}else {
					System.out.print("*");
				}
			}
			System.out.println("");
		}
	}
}
