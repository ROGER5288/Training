package FlowControlStatement.LoopingStatement.Forloop;

public class Program8 {
	public static void main(String[] args) {
		int n=3;
		for(int row = 1; row<=n; row++) {
			for(int col = 1; col<=n- row +(2*row-1);col++) {
				if(col<=n-row ) {
					System.out.print(" ");
				}else {
					System.out.print("*");
				}
			}
			System.out.println("");
		}
		
		/*int rows = 3;

        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= rows - i + (2 * i - 1); j++) {
                if (j <= rows - i)
                    System.out.print(" ");
                else
                    System.out.print("*");
            }
            System.out.println();
        }
        */
	}
}
